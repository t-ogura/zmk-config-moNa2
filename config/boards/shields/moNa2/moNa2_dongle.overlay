#include "moNa2.dtsi"

/ {
    chosen {
        zmk,kscan = &mock_kscan;
        zmk,matrix_transform = &mock_transform;
        zmk,physical-layout = &mock_layout;
    };

    mock_kscan: kscan_1 {
        compatible = "zmk,kscan-mock";
        columns = <0>;
        rows = <0>;
        events = <0>;
    };

    mock_transform: mock_transform {
        compatible = "zmk,matrix-transform";
        columns = <1>;
        rows = <1>;
        map = <RC(0,0)>;
    };

    mock_layout: mock_layout {
        compatible = "zmk,physical-layout";
        display-name = "Dongle Layout"; 
        transform = <&mock_transform>;
        keys = <&key_physical_attrs 100 100 0 0 0 0 0>;
    };
};

// Disable the original kscan0 which lacks col-gpios
&kscan0 {
    status = "disabled";
};